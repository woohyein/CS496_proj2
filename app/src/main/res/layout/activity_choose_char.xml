<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select your opponent!"
                    android:fontFamily="@font/masque"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="24dp"
                    android:layout_marginTop="70dp"
                    android:textColor="#A46260"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/easy"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/easy"
                    android:backgroundTint="@color/clr3"
                    android:scaleType="centerInside"
                    android:layout_gravity="center|left"
                    />

                <ImageButton
                    android:id="@+id/normal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/normal"
                    android:scaleType="centerInside"
                    android:backgroundTint="#597484"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/hard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/hard"
                    android:scaleType="centerInside"
                    android:backgroundTint="#435256"
                    android:layout_gravity="center|right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crayon"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="27dp"
                    android:fontFamily="@font/masque"
                    android:textColor="@color/clr2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="career woman"
                    android:layout_gravity="center"
                    android:fontFamily="@font/masque"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="25dp"
                    android:textColor="@color/clr3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alphago"
                    android:layout_gravity="center"
                    android:fontFamily="@font/masque"
                    android:textSize="15dp"
                    android:textColor="@color/clr2"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>